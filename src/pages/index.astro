---
import BaseLayout from '../layouts/BaseLayout.astro';
import DistortedCodeBackground from '../components/DistortedCodeBackground.astro';
import { ApiIntegrationDemo, AutomationDemo, CustomAppDemo, InfoSiteDemo } from '../components/AnimatedDemos';
import CTAButton from '../components/CTAButton';
import { Code, Zap, Layers, Globe, ArrowRight } from 'lucide-react';
---

<BaseLayout
  title="Tim Shoemake | Senior AI/Software Engineer"
  description="Senior AI/Software Engineer specializing in API integrations, business automation, and custom web applications. Available for contract work."
>
  <div class="flex flex-col gap-24">
    <!-- Hero Section -->
    <section class="relative pt-36 pb-24 px-6 overflow-hidden bg-background">
      <DistortedCodeBackground />

      <!-- Content -->
      <div class="max-w-4xl mx-auto text-left space-y-8 relative z-10">
        <div class="flex justify-center mb-6">
          <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-slate-900 border border-slate-800 text-primary text-xs font-medium shadow-sm">
            <span class="relative flex h-2 w-2">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary opacity-75"></span>
              <span class="relative inline-flex rounded-full h-2 w-2 bg-primary"></span>
            </span>
            Available for contract work
          </div>
        </div>

        <!-- Terminal Card -->
        <div class="bg-slate-900 border border-slate-700/50 rounded-lg shadow-2xl p-6 md:p-8 font-mono overflow-hidden relative group">
          <div class="flex gap-2 mb-6">
            <div class="w-3 h-3 rounded-full bg-red-500/80"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-500/80"></div>
            <div class="w-3 h-3 rounded-full bg-green-500/80"></div>
          </div>

          <div class="space-y-4">
            <div class="flex flex-col md:flex-row md:items-center gap-2 text-sm md:text-base">
              <span class="text-green-400 font-bold">guest@portfolio:~$</span>
              <span class="text-slate-300 typing-effect">./initialize_profile.sh --role=engineer</span>
            </div>

            <div class="pt-2">
              <h1 class="text-3xl md:text-5xl font-bold text-white mb-2">Tim Shoemake</h1>
              <h2 class="text-xl md:text-2xl text-primary font-semibold mb-4">Senior AI/Software Engineer</h2>
              <p class="text-slate-400 text-base md:text-lg leading-relaxed max-w-2xl">
                Creating intelligent solutions that scale, adapt, and deliver. <span class="inline-block w-2.5 h-5 bg-slate-400 animate-pulse align-middle ml-1"></span>
              </p>
            </div>
          </div>

          <div class="absolute top-0 right-0 p-8 opacity-10 md:opacity-20 pointer-events-none">
            <Code className="w-[120px] h-[120px]" />
          </div>
        </div>

        <div class="flex flex-col sm:flex-row items-center justify-center gap-4 pt-4">
          <a href="/services">
            <button class="px-6 py-2.5 rounded-lg font-medium transition-all duration-200 flex items-center justify-center gap-2 text-sm bg-primary hover:bg-sky-500 text-white shadow-lg shadow-sky-500/20 w-full sm:w-auto">
              View My Services <ArrowRight className="w-4 h-4" />
            </button>
          </a>
          <a href="/resume">
            <button class="px-6 py-2.5 rounded-lg font-medium transition-all duration-200 flex items-center justify-center gap-2 text-sm bg-surface hover:bg-slate-700 text-white border border-slate-700 w-full sm:w-auto">
              View Resume
            </button>
          </a>
        </div>

        <div class="pt-8 border-t border-slate-800/50 mt-12 text-center">
          <p class="text-xs text-slate-500 font-mono mb-4 uppercase tracking-widest">Trusted Technologies</p>
          <div class="flex flex-wrap justify-center gap-8 opacity-50 grayscale hover:grayscale-0 transition-all duration-500">
            {['.NET Core', 'React', 'AWS', 'Azure', 'SQL Server', 'TypeScript', 'Node.js'].map(tech => (
              <span class="text-sm font-semibold text-slate-300">{tech}</span>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Service Preview -->
    <section class="px-6 max-w-7xl mx-auto w-full">
      <div class="mb-12 text-center">
        <h2 class="text-3xl font-bold text-white mb-4">Services</h2>
        <p class="text-slate-400">Transforming manual processes into efficient, automated code.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="lg:col-span-2 group relative bg-surface rounded-2xl p-8 border border-slate-800 hover:border-slate-600 transition-all overflow-hidden">
          <div class="relative z-10">
            <div class="w-12 h-12 bg-primary/20 rounded-lg flex items-center justify-center text-primary mb-6">
              <Zap className="w-6 h-6" />
            </div>
            <h3 class="text-xl font-bold text-white mb-2">API Integrations</h3>
            <p class="text-slate-400 mb-6 max-w-md">Seamlessly connect your tools. I build reliable pipelines that move data between GitHub, Slack, Jira, Salesforce, and custom endpoints.</p>
            <ApiIntegrationDemo client:visible />
          </div>
        </div>

        <div class="group relative bg-surface rounded-2xl p-8 border border-slate-800 hover:border-slate-600 transition-all">
          <div class="relative z-10">
            <div class="w-12 h-12 bg-secondary/20 rounded-lg flex items-center justify-center text-secondary mb-6">
              <Layers className="w-6 h-6" />
            </div>
            <h3 class="text-xl font-bold text-white mb-2">Business Automation</h3>
            <p class="text-slate-400 mb-6">Automate complex business logic across platforms.</p>
            <AutomationDemo client:visible />
          </div>
        </div>

        <div class="group relative bg-surface rounded-2xl p-8 border border-slate-800 hover:border-slate-600 transition-all">
          <div class="relative z-10">
            <div class="w-12 h-12 bg-accent/20 rounded-lg flex items-center justify-center text-accent mb-6">
              <Code className="w-6 h-6" />
            </div>
            <h3 class="text-xl font-bold text-white mb-2">Custom Apps</h3>
            <p class="text-slate-400 mb-6">Full-stack web applications: Home inspection software, financial integrations, custom e-signature platforms and more.</p>
            <CustomAppDemo client:visible />
          </div>
        </div>

        <div class="lg:col-span-2 group relative bg-surface rounded-2xl p-8 border border-slate-800 hover:border-slate-600 transition-all">
          <div class="grid md:grid-cols-2 gap-8 items-center">
            <div class="relative z-10">
              <div class="w-12 h-12 bg-green-500/20 rounded-lg flex items-center justify-center text-green-500 mb-6">
                <Globe className="w-6 h-6" />
              </div>
              <h3 class="text-xl font-bold text-white mb-2">Business Landing Pages</h3>
              <p class="text-slate-400 mb-6">High-performance sites designed to convert. I build fast, SEO-optimized landing pages that generate leads and grow your business. Showcasing work for <a href="https://crossfit601.com" class="text-primary hover:underline">CrossFit 601</a>, <a href="https://mapinme.com" class="text-primary hover:underline">MapInMe</a>, and <a href="https://ser247.com" class="text-primary hover:underline">SER247</a>.</p>
              <CTAButton client:load className="text-primary hover:text-white transition-colors cursor-pointer font-medium text-sm flex items-center gap-1">
                Start a project <ArrowRight className="w-3.5 h-3.5" />
              </CTAButton>
            </div>
            <InfoSiteDemo client:visible />
          </div>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="px-6 py-20">
      <div class="max-w-4xl mx-auto bg-gradient-to-r from-primary/20 to-secondary/20 rounded-3xl p-12 text-center border border-slate-700/50 relative overflow-hidden">
        <div class="absolute top-0 right-0 w-64 h-64 bg-primary/30 rounded-full blur-[80px] -translate-y-1/2 translate-x-1/2"></div>
        <div class="relative z-10">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Ready to streamline your workflow?</h2>
          <p class="text-slate-300 mb-8 max-w-xl mx-auto">Whether you need a complex API integration or a simple landing page, I bring engineering rigor to every project.</p>
          <CTAButton client:load className="mx-auto px-8 py-3 text-base">Get in Touch</CTAButton>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
